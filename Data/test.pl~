#!/usr/bin/perl -w

open OUTPUT, "S_aureus.fasta";

$count=0;
open INGEN, "/media/harry/extra/Intergenic_variation_paper/Data/Alignment_files/02_Alignment_all_CCs.Fasta";
while(<INGEN>){
	$line=$_;
	chomp $line;
	if($line =~ /^>(\S+)/){
		$id=$1;
	}elsif($line =~ /^([ATGCN]+)/){
		$seq=$1;
		
		$count++;
		print OUTPUT ">$id\n$seq\n";
		
		if($count == 10){
			last;
		}
	}
}

